@inherits UmbracoTemplatePage<AnnouncesOverview>
@{
    Layout = "ContentBase.cshtml";
    var containerId = "announces-list";
    var overlayId = "loading-overlay";
}

@*@section RightSidebar
    {
        <div class="standart-right-sidebar">
            @{Html.RenderPartial("~/Views/Partials/Common/Calendar.cshtml");}
        </div>
    }*@

@section Body{
    <section class="announce-overview-container">
        <header class="header">
            <div class="row">
                <div class="col-sm-24">
                    <h2>@Model.Content.GetTitle()</h2>
                </div>
            </div>
        </header>
        <div id="@containerId" class="list"></div>
        <div id="@overlayId" class="loading-overlay"></div>
    </section>

    <script type="text/javascript">
        $(function () {
            announcesRouting.init({
                containerId: '@containerId',
                overlayId: '@overlayId',
                itemsPerPage: @Consts.AnnouncesConfig.ItemsPerPageOnOverviewPage});
        });
    </script>
}