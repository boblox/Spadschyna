@inherits UmbracoTemplatePage<AnnounceItem>
@{
    Layout = "ContentBase.cshtml";
    var item = Model.Content;
    var parent = item.Parent;
    //var overviewTitle = item.Ancestor<AnnounceOverview>().Title;
    var title = item.GetTitle();
    var dict = new ViewDataDictionary { { "showTime", true } };
    var btnBackId = "btn-back";
    var fallbackUrl = parent.Url + "#/";
}

@section RightSidebar
{
    @*<div class="standart-right-sidebar">
            @{Html.RenderPartial("~/Views/Partials/Common/Calendar.cshtml");}
    </div>*@
}

@section Body{
    <article class="announce-item-container">
        <header class="title">
            <a id="@btnBackId" class="btn-back" href="#"></a>
            <div class="text">
                <h3>@title</h3>
                @{ Html.RenderPartial("/Views/Partials/Common/ArticleInfo.cshtml", item, dict);}
            </div>
        </header>
        <div class="grid-content">
            @Html.GetGridHtml(item, AnnounceItem.GetModelPropertyType(i => i.Content).PropertyTypeAlias, "Custom")
        </div>
        @{Html.RenderPartial("~/Views/Partials/Common/Comments.cshtml");}
    </article>

    <script type="text/javascript">
        $(function () {
            InitBackButton('@btnBackId', '@fallbackUrl');
        });
    </script>
}