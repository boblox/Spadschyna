@inherits UmbracoTemplatePage
@{
    var page = (Home)Model.Content;
    var site = page.AncestorOrSelf(1);
    var overview = site.FirstChild<AnnouncesOverview>();
    var items = ContentManager.GetAnnounceItems(1, Consts.AnnouncesConfig.ItemsOnFrontPage).Items;
}

<article class="home-announces-wrapper">
    <div class="container">
        <header class="home-announces-header">
            <h2>@page.AnnouncesTitle</h2>
        </header>
        <section class="home-announces">
            <div class="row no-gutters">
                @foreach (var item in items)
                {
                    <div class="col-sm-12 col-md-8">
                        <article class="home-announce">
                            <a href="@item.Url">
                                <div class="home-announce-date">
                                    <time class="home-announce-day">@item.DateOfHappening.Day.ToString().PadLeft(2, '0')</time>
                                    <time class="home-announce-month">@item.DateOfHappening.ToString("MMM")</time>
                                </div>
                                <div class="home-announce-details">
                                    <header>
                                        <h3>@item.Title</h3>
                                    </header>
                                    <span class="calendar-icon"></span>
                                    <span class="home-announce-time">@item.DateOfHappening.ToString("HH:mm")</span>
                                    <br />
                                    <span class="calendar-icon"></span>
                                    <span class="home-announce-location">@item.Place</span>
                                </div>
                            </a>
                        </article>
                    </div>
                }
            </div>
        </section>
        <section class="home-announces-read-more">
            <a href="@overview.Url" class="btn btn-default">@page.AnnouncesReadMore</a>
        </section>
    </div>
</article>
